            <!--</LinearLayout>-->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textColor="#000000"
                        android:text="Minimal x:"
                        />
                    <EditText
                        android:id="@+id/etMinX"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:hint="Введите минимальное x"
                        android:inputType="phone"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textColor="#000000"
                        android:text="Maximal x:" />
                    <EditText
                        android:id="@+id/etMaxX"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:hint="Введите максимальное x"
                        android:inputType="phone"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textColor="#000000"
                        android:text="a:" />
                    <EditText
                        android:id="@+id/etA"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:hint="Введите значение a"
                        android:inputType="phone"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textColor="#000000"
                        android:text="b:" />
                    <EditText
                        android:id="@+id/etB"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:hint="Введите значение b"
                        android:inputType="phone"
                        />
                </TableRow>

                <Button
                    android:id="@+id/btnBuildGraph"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Построить график"
                    android:textAllCaps="false"/>



            </TableLayout>



        </LinearLayout>


</ScrollView>
