<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.modeling.aleksey.modelinglab1.NormalDistributionFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:text="Нормальное распределение"/>

        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal"-->
        <!--android:layout_margin="8dp"-->
        <!--&gt;-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="F(x)"-->
        <!--android:textColor="#000000"/>-->

        <!--<com.jjoe64.graphview.GraphView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="200dp"-->
        <!--android:id="@+id/graph"-->
        <!--android:layout_margin="8dp"/>-->


        <!--</LinearLayout>-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="#000000"
                    android:text="Minimal x:"
                    />
                <EditText
                    android:id="@+id/etNormMinX"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Введите минимальное x"
                    android:inputType="phone"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="#000000"
                    android:text="Maximal x:"
                    />
                <EditText
                    android:id="@+id/etNormMaxX"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Введите максимальное x"
                    android:inputType="phone"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="#000000"
                    android:text="μ:" />
                <EditText
                    android:id="@+id/etU"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Введите мат ожидание"
                    android:inputType="phone"
                    />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="#000000"
                    android:text="σ:" />
                <EditText
                    android:id="@+id/etQ"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:hint="Введите стандартное отклонение"
                    android:inputType="phone"
                    android:ellipsize="end"
                    />
            </TableRow>

            <Button
                android:id="@+id/btnBuildNormGraph"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Построить график"
                android:textAllCaps="false"/>



        </TableLayout>



    </LinearLayout>


</ScrollView>
