<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.modeling.aleksey.modelinglab2.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="45">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Табличный"
                android:textColor="#000000"
                android:background="@drawable/column_name_gradient"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_tableColumn_1p"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_tableColumn_2p"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_tableColumn_3p"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="45">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Алгоритм"
                android:maxLength="10"
                android:textColor="#000000"
                android:background="@drawable/column_name_gradient"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_algoColumn_1p"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_algoColumn_2p"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_algoColumn_3p"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Свои"
                android:textColor="#000000"
                android:gravity="center"
                android:background="@drawable/column_name_gradient"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/column_name_gradient"/>

                <EditText
                    android:id="@+id/et_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_table_style"
                    android:gravity="center"
                    android:hint="test"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textColor="#5a8b36"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_table_style"
                    android:gravity="center"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_table_style"
                    android:gravity="center"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/textview_table_style"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_table_style"
                    android:gravity="center"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/textview_table_style"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/et_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/textview_table_style"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/et_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/textview_table_style"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/et_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/textview_table_style"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/et_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_table_style"
                    android:gravity="center"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="По критерию случайности (меньше лучше):"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="45">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:id="@+id/tv_table_1p_criteria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="1p"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:id="@+id/tv_table_2p_criteria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="2р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:id="@+id/tv_table_3p_criteria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="3р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="45">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:id="@+id/tv_algo_1p_criteria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="1р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:id="@+id/tv_algo_2p_criteria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="2р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="15">

                    <TextView
                        android:id="@+id/tv_algo_3p_criteria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="3р"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@drawable/column_name_gradient"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="15">

                <TextView
                    android:id="@+id/tv_self_criteria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:background="@drawable/column_name_gradient"
                    android:hint="Свой"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>