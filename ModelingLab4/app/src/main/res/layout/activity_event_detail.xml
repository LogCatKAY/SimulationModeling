<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.modeling.aleksey.modelinglab4.EventDetailActivity"
    android:layout_margin="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Состояние буферной памяти"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/iv_eventBuf"
            android:layout_width="match_parent"
            android:layout_height="320dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Состояние списка будущих событий"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/iv_eventFuture"
            android:layout_width="match_parent"
            android:layout_height="320dp" />

    </LinearLayout>

</ScrollView>
